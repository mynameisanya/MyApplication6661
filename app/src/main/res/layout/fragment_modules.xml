<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2_"
    android:layout_height="match_parent"
    tools:context=".ui.modules.ModulesFragment">


    <ImageButton
        android:id="@+id/distress_tolerance"
        android:layout_width="280dp"
        android:layout_height="123dp"
        android:layout_marginTop="256dp"
        android:src="@drawable/distress_tolerance_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mindfulness"
        android:layout_width="308dp"
        android:layout_height="131dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/distress_tolerance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/emotional_regulation"
        android:layout_width="276dp"
        android:layout_height="113dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distress_tolerance"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/interpersonal_effectiveness"
        android:layout_width="248dp"
        android:layout_height="124dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotional_regulation"
        tools:src="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>