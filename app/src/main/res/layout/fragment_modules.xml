<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background3"
    android:layout_height="match_parent"
    tools:context=".ui.modules.ModulesFragment">


    <ImageButton
        android:id="@+id/distress_tolerance"
        android:layout_width="355dp"
        android:layout_height="141dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/distress_tolerance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mindfulness"
        android:layout_width="355dp"
        android:layout_height="141dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/mind"
        app:layout_constraintBottom_toTopOf="@+id/distress_tolerance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/emotional_regulation"
        android:layout_width="355dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/emotional2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distress_tolerance" />

    <ImageButton
        android:id="@+id/interpersonal_effectiveness"
        android:layout_width="355dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/inter2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotional_regulation" />


</androidx.constraintlayout.widget.ConstraintLayout>