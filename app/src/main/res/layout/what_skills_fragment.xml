<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".ui.modules.ModulesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/observe_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="@dimen/main_margin_top_bottom"
            android:src="@drawable/observe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/descibe_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/describe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/observe_image" />

        <ImageButton
            android:id="@+id/participate_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/main_margin_top_bottom"
            android:src="@drawable/participate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descibe_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>