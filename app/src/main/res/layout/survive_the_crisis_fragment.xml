<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2_">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2_"
        tools:context=".ui.modules.survive_the_crisis.SurviveTheCrisisFragment">

        <ImageButton
            android:id="@+id/stop_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="@dimen/main_margin_top_bottom"
            android:src="@drawable/stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/pros_and_cons_image"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pros_and_cons"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/stop_image"
            app:layout_constraintTop_toBottomOf="@+id/stop_image" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/tip_image"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tip"
            app:layout_constraintBottom_toTopOf="@+id/self_soothe_image"
            app:layout_constraintStart_toStartOf="@+id/pros_and_cons_image"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <ImageButton
            android:id="@+id/accepts_image"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/accepts"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="@+id/stop_image"
            app:layout_constraintTop_toBottomOf="@+id/stop_image" />

        <ImageButton
            android:id="@+id/improve_image"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/improve"
            app:layout_constraintBottom_toTopOf="@+id/self_soothe_image"
            app:layout_constraintEnd_toEndOf="@+id/accepts_image"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <ImageButton
            android:id="@+id/self_soothe_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginBottom="@dimen/main_margin_top_bottom"
            android:src="@drawable/selfsoothe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>