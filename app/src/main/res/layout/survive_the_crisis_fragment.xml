<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".survive_the_crisis.SurviveTheCrisisFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:src="@drawable/background2_"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageButton
        android:id="@+id/stop_image"
        android:layout_width="179dp"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/stop"
        app:layout_constraintBottom_toBottomOf="@+id/pros_and_cons_image"
        app:layout_constraintEnd_toStartOf="@+id/pros_and_cons_image"
        app:layout_constraintTop_toTopOf="@+id/pros_and_cons_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/pros_and_cons_image"
        android:layout_width="174dp"
        android:layout_height="121dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pros_and_cons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/tip_image"
        android:layout_width="177dp"
        android:layout_height="125dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/tip"
        app:layout_constraintBottom_toBottomOf="@+id/accepts_image"
        app:layout_constraintEnd_toStartOf="@+id/accepts_image"
        app:layout_constraintTop_toTopOf="@+id/accepts_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/accepts_image"
        android:layout_width="175dp"
        android:layout_height="116dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/accepts"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="202dp" />

    <ImageButton
        android:id="@+id/self_soothe_image"
        android:layout_width="176dp"
        android:layout_height="126dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/self_soothe"
        app:layout_constraintBottom_toBottomOf="@+id/improve_image"
        app:layout_constraintEnd_toStartOf="@+id/improve_image"
        app:layout_constraintTop_toTopOf="@+id/improve_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/improve_image"
        android:layout_width="177dp"
        android:layout_height="124dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/improve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accepts_image" />


</androidx.constraintlayout.widget.ConstraintLayout>