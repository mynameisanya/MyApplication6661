<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="accepting_reality.AcceptingRealityFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2_"
        tools:context="accepting_reality.AcceptingRealityFragment">



        <ImageButton
            android:id="@+id/radical_acceptance_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="@dimen/main_margin_top_bottom"
            android:src="@drawable/radical_acceptance_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/turing_your_mind_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/turing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radical_acceptance_image" />

        <ImageButton
            android:id="@+id/willingness_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/willigness"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/turing_your_mind_image" />

        <ImageButton
            android:id="@+id/half_smile_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/half_smile_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/willingness_image" />

        <ImageButton
            android:id="@+id/directed_consciousness_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/main_margin_top_bottom"
            android:src="@drawable/directed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/half_smile_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>