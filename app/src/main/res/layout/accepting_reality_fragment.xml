<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="accepting_reality.AcceptingRealityFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/radical_acceptance_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:src="@drawable/radical_acceptance_"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"/>

        <ImageButton
        android:id="@+id/turing_your_mind_image"
        android:layout_width="353dp"
        android:layout_height="167dp"
        android:src="@drawable/turing"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="409dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>


        <ImageButton
            android:id="@+id/willingness_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:src="@drawable/willigness"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="261dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <ImageButton
            android:id="@+id/half_smile_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/half_smile_"
            tools:layout_editor_absoluteY="192dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/directed_consciousness_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/directed" />

    </LinearLayout>
</ScrollView>