<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dcba.DCBAFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:src="@drawable/background2_" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="50dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выживание в кризисе" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Принятие реальности" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стать свободной" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "АБСД" />



    </com.google.android.material.tabs.TabLayout>

    <ImageButton
        android:id="@+id/abstinence_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:src="@drawable/abstinence" />


    <ImageButton
        android:id="@+id/clear_mind_image"
        android:layout_width="262dp"
        android:layout_height="121dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/clear_mind" />

    <ImageButton
        android:id="@+id/support_community_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:src="@drawable/support_community" />

    <ImageButton
        android:id="@+id/bridges_image"
        android:layout_width="278dp"
        android:layout_height="121dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
        android:src="@drawable/bridges" />

    <ImageButton
        android:id="@+id/riot_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:src="@drawable/riot" />

    <ImageButton
        android:id="@+id/refusal_image"
        android:layout_width="179dp"
        android:layout_height="121dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/refusal" />


</FrameLayout>