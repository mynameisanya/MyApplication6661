<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2_"
    tools:context="dcba.DCBAFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/abstinence_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="@dimen/main_margin_top_bottom"
            android:src="@drawable/abstinence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/clear_mind_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/clear_mind"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/abstinence_image" />

        <ImageButton
            android:id="@+id/support_community_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/support"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clear_mind_image" />

        <ImageButton
            android:id="@+id/bridges_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bridges"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/support_community_image" />

        <ImageButton
            android:id="@+id/riot_image"
            android:layout_width="353dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/main_margin_top_bottom"
            android:src="@drawable/riot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bridges_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>