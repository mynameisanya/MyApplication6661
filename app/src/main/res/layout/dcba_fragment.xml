<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".ui.modules.distress_tolerance.dcba.DCBAFragment">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <ImageButton
        android:id="@+id/abstinence_image"
        android:layout_width="353dp"
        android:layout_height="166dp"
       android:layout_marginTop="70dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/abstinence1"
        app:layout_constraintBottom_toTopOf="@+id/clear_mind_image"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/clear_mind_image"
        android:layout_width="353dp"
        android:layout_height="166dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/clear_mind1"
        app:layout_constraintBottom_toTopOf="@+id/support_community_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/support_community_image"
        android:layout_width="353dp"
        android:layout_height="166dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/support"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/bridges_image"
        android:layout_width="353dp"
        android:layout_height="166dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/bridges3" />

    <ImageButton
        android:id="@+id/riot_image"
        android:layout_width="353dp"
        android:layout_height="166dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/riot2" />
</LinearLayout>
</ScrollView>