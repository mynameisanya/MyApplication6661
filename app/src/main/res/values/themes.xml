<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication666"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#435480</item>
        <item name="colorPrimaryVariant">#435480</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorButton</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication666.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/backgroundButton</item>
        <item name="android:textColor">@color/textColorButton</item>
    </style>
    <style name="Theme.MyApplication666.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication666.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>